{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./compiled",
    "noImplicitAny": false,
    "removeComments": true,
    "allowJs": true
  },
  "include": ["./src/api/**/*"],
  "exclude": ["node_modules"]
}
